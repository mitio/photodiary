<% if has_user_riths? %>
  <% page_title = t('.my_albums') %>
<% else %>
  <% page_title = t('.albums_of', user: @user.username) %>
<% end %>
<% content_for :page_title, page_title %>

<div class="albumTitle">
  <h1><%= page_title %>
    <% if !has_user_riths? %>
      <% image_src = @user.small_avatar %>
      <% image_src = asset_path('noavatar_small.png') unless image_src %>
      <%= link_to image_tag(image_src, border: 0), user_albums_path(@user), title: t('.albums_of', user: @user.username) %>
    <% end %>
  </h1>
  <% if has_user_riths? %>
    <div class="albumLinks">
      <%= link_to t('.create_new'), new_user_album_path(@user) %> |
    </div>
  <% end %>
</div>
<%= render 'messages' %>

<div class="photoHolder">
  <% if @albums.size > 0 %>
    <% @albums.each_with_index do |album, i| %>
      <div class="objHolder bm <%= 'rm' if i % 7 != 6 %>">
        <% album_photo = album.first_photo %>
        <% if album_photo %>
          <% first_image_src = album_photo.file.thumb.url %>
        <% else %>
          <% first_image_src = asset_path('nophotos.png') %>
        <% end %>
        <%= link_to image_tag(first_image_src, border: 0), album_photos_path(album), title: album.title, class: "photoLink" %>
      </div>
    <% end %>
  <% else %>
    <p><%= t('.no_albums') %></p>
  <% end %>
  <div class="clear"></div>
</div>
