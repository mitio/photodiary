<% if logged_in? %>
  <% if @comment.errors.any? %>
    <div class="error_explanation">
      <h2><%= t('error_occur', count: @comment.errors.count) %>:</h2>
      <ul>
        <% @comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for([@photo.album, @photo, @comment]) do |f| %>
    <div class="field">
      <%= f.label :body %><br />
      <%= f.text_area :body %>
    </div>
    <div class="actions">
      <%= f.submit t('helpers.submit.publish') %>
    </div>
  <% end %>
<% end %>
