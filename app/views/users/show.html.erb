<h1>
  <% if has_edit_right? %>
    <%= I18n.t('views.user.profile') %>
  <% else %>
    <%= I18n.t('views.user.preview_user') %> <%= @user.username %>
  <% end %>
</h1>
<% if has_edit_right? %>
  [<%= link_to I18n.t('views.edit'), edit_user_path(current_user) %>]
<% end %>
<%= render 'messages' %>

<p>
  <b><%= I18n.t('activerecord.attributes.user.full_name') %>:</b>
  <%= @user.full_name %>
</p>

<p>
  <b><%= I18n.t('activerecord.attributes.user.email') %>:</b>
  <%= @user.email %>
</p>

<p>
  <b><%= I18n.t('activerecord.attributes.user.photo') %>:</b>
  <% if @user.photo? %>
      <%= image_tag(@user.photo.thumb.url) %><br />
  <% else %>
    -   
  <% end %>
</p>

<p>
  <b><%= I18n.t('activerecord.attributes.user.description') %>:</b>
  <%= @user.description %>
</p>

<p>
  <b><%= I18n.t('activerecord.attributes.user.albums') %>:</b>
  <%= link_to "X na broi", user_albums_path(@user) %>
</p>

