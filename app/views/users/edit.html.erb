<h1><%= I18n.t('views.user.edit_user') %></h1>

<%= form_for(@user, :html => { :multipart => true }) do |f| %>
  <% if @user.errors.any? %>
    <div class="error_explanation">
      <h2><%= (@user.errors.count == 1 ? I18n.t('views.error_occur') : I18n.t('views.errors_occur')) %>:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, :disabled => true %>
  </div>
  <div class="field">
    <%= f.label :full_name %><br />
    <%= f.text_field :full_name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email, :disabled => true %>
  </div>
  <% if @user.photo? %>
    <div class="field">
      <%= image_tag(@user.photo.thumb.url) %><br />
      <%= f.check_box :remove_photo %>
      <%= f.label :remove_photo %>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :photo %>
    <%= f.file_field :photo %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to I18n.t('views.preview'), @user %> |
<%= link_to I18n.t('views.user.back_to_users'), users_path %>
