<% page_title = t('.users_of_site', site: t('sitename')) %>
<% content_for :page_title, page_title %>

<div class="albumTitle">
  <h1><%= t('.users_of_site_are', count: @users.size, site: t('sitename')) %></h1>
</div>
<%= render 'messages' %>

<div class="usersHolder">
  <% @users.each_with_index do |user, i| %>
    <div class="usrHolder bm rm">
      <% image_src = user.avatar %>
      <% image_src = asset_path('noavatar.png') unless image_src %>
      <%= link_to image_tag(image_src, border: 0), user_path(user), title: user.username, class: "userLink" %>
    </div>
  <% end %>
  <div class="clear"></div>
</div>
