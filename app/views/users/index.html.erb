<div class="albumTitle">
  <h1><%= I18n.t('views.user.users_of')+I18n.t('views.sitename') %></h1>
</div>
<%= render 'messages' %>

<div class="usersHolder">
  <% @users.each_with_index do |user, i| %>
    <div class="usrHolder bm <%= 'rm' if i % 5 != 4 %>">
      <%= link_to image_tag(user.avatar, :border=>0), user_path(user), :title => user.username, :class => "userLink" %>
    </div>
  <% end %>
  <div class="clear"></div>
</div>
