<div class="albumTitle">
  <h1><%= I18n.t('views.user.registration') %></h1>
</div>

<%= form_for(@user) do |f| %>
  <%= render 'messages' %>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="actions">
    <%= f.submit I18n.t('views.user.registration') %>
  </div>
<% end %>
